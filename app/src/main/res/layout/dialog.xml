<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="180dp"
    android:gravity="center"
    android:padding="10dp"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_goodsName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="8"
        android:hint="请输入商品名称"
        />

    <EditText
        android:id="@+id/et_brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="8"
        android:hint="请输入品牌名称"
        />

    <EditText
        android:id="@+id/et_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="8"
        android:hint="请输入商品类型"
        />

    <EditText
        android:id="@+id/et_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="8"
        android:hint="请输入商品重量(吨)"
        android:inputType="numberDecimal"
        />





    <EditText
        android:id="@+id/et_life"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="8"
        android:hint="请输入商品储存条件"
        />
    <LinearLayout
        android:id="@+id/iv_storage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/place"
            />


        <EditText
            android:id="@+id/et_storage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请点击图标选择商品产地"
            android:enabled="false"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/iv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/calendar"
            />


        <EditText
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请点击图标选择生产日期"
            android:enabled="false"
            />

    </LinearLayout>



    <EditText
        android:id="@+id/et_ShelfLife"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="8"
        android:hint="请输入商品保质期(天)"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="商品核酸检测结果"/>
        <Spinner
            android:id="@+id/sp_covid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

</LinearLayout>